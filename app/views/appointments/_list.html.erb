
<%= link_to "Switch to Calendar View", appointments_calendar_path(:search => params[:search]) %>




<table>
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "start_time" %></th>
      <th><%= sortable "period" %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.name %></td>
        <td><%= appointment.start_time.to_date %></td>
        <td><%= appointment.period %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
