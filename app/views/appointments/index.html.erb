<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<% start_date = params.fetch(:start_date, Date.today).to_date %>
<% date_range = (start_date.beginning_of_month.beginning_of_week..start_date.end_of_month.end_of_week).to_a %>

<% appointments_in_this_month = @appointments.select{ |app| ( date_range.include?(app.start_time.to_date))} %>

<% appointment_days = [] %>
<% appointments_in_this_month.each do |app| appointment_days.push(app.start_time.to_date) end%>

<div class="month">      
  <ul>
    <li class="prev" ><%= link_to "<", start_date: (date_range.first - 1.day).beginning_of_month %></li>
    <li class="next"><%= link_to ">", start_date: (date_range.last + 1.day).beginning_of_month %></li>
    <li>
      <%= start_date.strftime("%B")%>
      <span style="font-size:18px"><%= start_date.year %></span>
    </li>
  </ul>
</div>




<table class = "calendar">
  <tr class = "weekdays2">
    <td>Mon</td>
    <td>Tue</td>
    <td>Wed</td>
    <td>Thu</td>
    <td>Fri</td>
    <td>Sat</td>
    <td>Sun</td>
  </tr>
  <% date_range.each_slice(7) do |week| %>
    <tr class= "days2">
      <% week.each do |day| %>
        <% str = day.day.to_s + "\n"%>
        <% for i in 0...appointment_days.length do 
              if appointment_days[i] == day 
                str = str + appointments_in_this_month[i].name + "\n"
              end
           end
        %>
        <% if day == start_date %>
          <td><span class="active"><%= str %></span></td>
        <% else %>
          <td><%= str %></td>
        <% end %>

      <% end %>
    </tr>
  <% end %>
</table>










<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.name %></td>
        <td><%= appointment.start_time %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

