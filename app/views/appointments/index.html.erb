<p id="notice"><%= notice %></p>

<h1>Appointments</h1>



<%= form_tag appointments_path, :method => 'get', :id => "appointments_search" do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <%= hidden_field_tag :display_style, params[:display_style] %>

  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>



<% display_style = params.fetch(:display_style, "calendar").to_s %>
<% if "list".eql? display_style %>
     <div id="appointments"><%= render 'list'%></div>
    <% else %>
    <%= render 'calendar', calendar2: @appointment %>
   <% end %>


<%= link_to 'New Appointment', new_appointment_path %>

